{
  "name": "personal-todo-list",
  "displayName": "Personal Todo List",
  "description": "A personalized todo list manager for VS Code with priority tags and filters",
  "version": "0.0.1",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:personal-todo-list.todoView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "personal-todo-list-container",
          "title": "Todo List",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "personal-todo-list-container": [
        {
          "id": "personal-todo-list.todoView",
          "name": "Personal Todo List"
        }
      ]
    },
    "commands": [
      {
        "command": "personal-todo-list.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "personal-todo-list.addTodo",
        "title": "Todo: Add New Todo",
        "icon": "$(add)"
      },
      {
        "command": "personal-todo-list.editTodo",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "personal-todo-list.toggleTodo",
        "title": "Toggle Completion",
        "icon": "$(check)"
      },
      {
        "command": "personal-todo-list.deleteTodo",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "personal-todo-list.filterTodos",
        "title": "Filter by Priority",
        "icon": "$(filter)"
      },
      {
        "command": "personal-todo-list.filterTodosByDate",
        "title": "Filter by Date",
        "icon": "$(calendar)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "personal-todo-list.addTodo",
          "when": "view == personal-todo-list.todoView",
          "group": "navigation"
        },
        {
          "command": "personal-todo-list.filterTodos",
          "when": "view == personal-todo-list.todoView",
          "group": "navigation"
        },
        {
          "command": "personal-todo-list.filterTodosByDate",
          "when": "view == personal-todo-list.todoView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "personal-todo-list.editTodo",
          "when": "view == personal-todo-list.todoView",
          "group": "inline"
        },
        {
          "command": "personal-todo-list.toggleTodo",
          "when": "view == personal-todo-list.todoView",
          "group": "inline"
        },
        {
          "command": "personal-todo-list.deleteTodo",
          "when": "view == personal-todo-list.todoView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "publisher": "abdullahmia"
}
